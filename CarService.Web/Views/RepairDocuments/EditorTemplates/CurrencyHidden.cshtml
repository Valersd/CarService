@model decimal?

@if (Model.HasValue)
{
    @Html.TextBox("", Model.Value.ToString("F2", System.Globalization.CultureInfo.CreateSpecificCulture(Cache["currency"] as string)), new { @class = "form-control", style="display:none" })
}
else
{
    @Html.TextBox("", Model, new { @class= "form-control"})
}