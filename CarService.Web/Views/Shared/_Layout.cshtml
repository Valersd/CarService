<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Car Service</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)

</head>
<body data-currency="@(HttpContext.Current.Cache["currency"] ?? "bg-BG")">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CAR SERVICE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav text-uppercase">
                    @if (User.Identity.IsAuthenticated && !User.IsInRole(CarService.Common.GlobalConstants.InactivRole))
                    {
                        <li>
                                <a class="dropdown-toggle" href="javascript:void(0);" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                    Repair documents
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                    <li role="presentation" class="divider"></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="~/RepairDocuments/Search"><h5>Search standart</h5></a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="~/RepairDocuments/ByPart"><h5>Search by part</h5></a></li>
                                    <li role="presentation" class="divider"></li>
                                </ul>
                            </li>
                        @*<li>@Html.ActionLink("Repair documents", "Search", "RepairDocuments")</li>*@
                        <li>@Html.ActionLink("Cars", "Search", "Cars")</li>
                        <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Replacement parts", "Search", "Parts")</li>
                        if (User.IsInRole(CarService.Common.GlobalConstants.AdminRole))
                        {

                            <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                        }

                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p class="text-muted h6">
                <em>
                    The application is for a test and demonstration purposes.
                    Any coincidence with real existing carvendors is completely accidental and without any purpose.
                    Users and carmodels are fictional.
                    Descriptions, categories and replacement parts are generated by Lorem ipsum.
                </em>
            </p>
            <p class="footer-text"><strong>&copy; Sophisticated @DateTime.Now.Year - Car Service</strong></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
